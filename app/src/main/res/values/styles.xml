<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:color">@color/colorPrimary</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

    </style>
    <style name="ForGoods" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">22dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:background">@drawable/goods</item>
        <item name="android:textColor">#C5661A</item>
        <item name="android:padding">12dp</item>
        <item name="android:gravity">left</item>

    </style>
    <style name="NotOnline" parent="ForGoods">
        <item name="android:textSize">25dp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:layout_marginBottom">9dp</item>
        <item name="android:background">@drawable/not_online</item>
        <item name="android:textColor">#C51A1A</item>
    </style>
    <style name="ForOnline" parent="NotOnline">
        <item name="android:background">@drawable/for_online</item>
        <item name="android:textColor">#3F51B5</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>

